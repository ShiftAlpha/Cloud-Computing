@*________________________Home View__________________________________________*@

@{
    ViewBag.Title = "Home Page";
}


<p class="lead" style="text-align: center">Shop Manager. Choose an option:</p>

<div class="row">
    <div class="col-md-3" style="text-align: center;">
        <p><a style="text-decoration-color:azure" href="@Url.Action("ListItems", "Storage")" class="btn btn-primary btn-lg" style="background-color:black;">View Items</a></p>
        <p>Displays item list and details.</p>
    </div>
    <div class="col-md-3" style="text-align: center;">
        <p><a style="text-decoration-color:azure" href="@Url.Action("AddItem", "Storage")" class="btn btn-primary btn-lg" style="background-color:black;">Add Item</a></p>
        <p>Add a new Item to a specific Department.</p>
    </div>
    <div class="col-md-3" style="text-align: center;">
        <p><a style="text-decoration-color:azure" href="@Url.Action("AddRemoveImages", "Storage")" class="btn btn-primary btn-lg" style="background-color:black;">Add & Remove Images</a></p>
        <p>Add and delete images from departments.</p>
    </div>
</div>