@*_________________________View receives an Item as a model and merely promts user for confirmation to delete_______________________
_________________________________________________Passes back item to be deleted____________________________________*@

@model ABC_backend.Models.Item
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="form-horizontal">
    <div class="form-group">
        <div class="gallery">
            <div style="height:180px">
                <img src="@Model.ImgURL" alt="No image selected" />
            </div>
            <div style="padding: 10px 10px 10px 10px;">
                <div style="height:110px;">
                    <h4>@Model.ItemName</h4>
                    <h6>@Model.Description</h6>
                </div>
                <div>
                    <h5>Price:          R @Model.Price.ToString("0.00")</h5>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ImgURL);
            @Html.HiddenFor(model => model.ETag);
            @Html.HiddenFor(model => model.ItemName);
            @Html.HiddenFor(model => model.PartitionKey);
            @Html.HiddenFor(model => model.RowKey);
            @Html.HiddenFor(model => model.Price);
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "ListItems")
            </div>
        }
    </div>
</div>

@* Gallery div class created*@
<style>
    div.gallery {
        margin: 5px;
        border: 1px solid #ccc;
        float: left;
        width: 180px;
        height: 350px;
    }

        div.gallery:hover {
            border: 1px solid #777;
        }

        div.gallery img {
            width: 100%;
            height: 180px;
        }

    div.desc {
        padding: 15px;
        text-align: center;
    }
</style>
